{
    "compilerOptions": {
      "noEmit": true,
      "strict": true,
      "jsx": "react",
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
        "@algorithms/*": ["packages/*/src"],
        "*": ["node_modules", "packages"]
      }
    },
    "include": ["packages"],
    "exclude": ["node_modules"]
  }